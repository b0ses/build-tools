server {
    # for a public HTTP server:
    listen {{nginx_http_port}};

    server_name {{ nginx_server_name }};

    {% if nginx_http_location %}
    location / {
        add_header 'Access-Control-Allow-Origin' '*';
        root {{ nginx_http_location }};
    }
    {% else %}
    location / {
        add_header 'Access-Control-Allow-Origin' '$http_origin';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;

        include proxy_params;
        proxy_pass http://unix://{{ base_dir }}/gunicorn.sock;
        
        # backup for websockets
        proxy_headers_hash_max_size 1024;
        proxy_headers_hash_bucket_size 128;

        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }
    location /socket.io {
        add_header 'Access-Control-Allow-Origin' '$http_origin';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        
        include proxy_params;
        proxy_buffering off;
        proxy_pass http://unix://{{ base_dir }}/gunicorn.sock;

        # backup for websockets
        proxy_headers_hash_max_size 1024;
        proxy_headers_hash_bucket_size 128;

        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        # proxy_pass http://unix://{{ base_dir }}/gunicorn-http.sock;
    }

    location /static {
        alias {{ appdata_dir }}/static;
    }

    location /favicon.ico {
        alias {{ appdata_dir }}/static/favicon.ico;
    }
    {% endif %}

    # For possible ssl directory
    location /.well-known/acme-challenge {
        root {{ ssl_dir }};
        try_files $uri $uri/ =404;
    }
}