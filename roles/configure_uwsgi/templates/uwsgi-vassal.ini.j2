[uwsgi]
socket = {{ base_dir }}/uwsgi.sock
http-socket = {{ base_dir }}/uwsgi-http.sock
chmod-socket = 775
chdir = {{ appdata_dir }}
master = true
binary-path = {{ base_dir }}/bin/uwsgi
virtualenv = {{ base_dir }}
module = {{ uwsgi_module }}
uid = {{ uid }}
gid = {{ gid }}
threads = {{ uwsgi_threads }}
plugins = {{ uwsgi_plugins }}
logger = file:{{ base_dir }}/uwsgi.log
http-websockets = {{ uwsgi_sockets|lower }}
gevent = {{ uwsgi_gevent }}
vacuum = true

{% for env in uwsgi_env %}
env = {{ env }}
{% endfor %}
