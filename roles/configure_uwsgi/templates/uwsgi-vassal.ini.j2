[uwsgi]
socket = {{ base_dir }}/uwsgi.sock
chmod-socket = 775
chdir = {{ appdata_dir }}
home = {{ base_dir }}/.venvs/{{ module_name }}
master = true
binary-path = {{ base_dir }}/.venvs/{{ module_name }}/bin/uwsgi
venv = {{ base_dir }}/.venvs/{{ module_name }}
module = {{ uwsgi_module }}
uid = {{ uid }}
gid = {{ gid }}
processes = {{ uwsgi_processes }}
threads = {{ uwsgi_threads }}
plugins = {{ uwsgi_plugins }}
logger = file:{{ base_dir }}/uwsgi.log
req-logger = file:{{ {{ appdata_dir }} }}/app.log
http-websockets = {{ uwsgi_sockets|lower }}
gevent = {{ uwsgi_gevent }}
vacuum = true

{% for env in uwsgi_env %}
env = {{ env }}
{% endfor %}
